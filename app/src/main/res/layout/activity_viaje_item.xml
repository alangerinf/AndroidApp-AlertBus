<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="5dp"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/avi_tViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="2019-05-03 10:01:00"
        android:textColor="@color/secondaryText"
        android:layout_gravity="right"
        android:textSize="@dimen/textsize_tertiary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/avi_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI"
            android:layout_marginStart="10dp"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/textsize_secondary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/avi_tViewName"
            app:layout_constraintTop_toBottomOf="@+id/avi_tViewFecha" />

        <TextView
            android:id="@+id/avi_tViewDNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="98765432"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/textsize_secondary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/avi_textView3"
            app:layout_constraintStart_toEndOf="@+id/avi_textView3"
            app:layout_constraintTop_toTopOf="@+id/avi_textView3" />
    </LinearLayout>



    <TextView
        android:id="@+id/avi_tViewObservacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="*DESCANSO VACACIONAL"
        android:visibility="gone"
        android:textColor="@color/accent"
        android:textSize="@dimen/textsize_secondary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avi_tViewName" />
    <TextView
        android:id="@+id/avi_tViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Nombre del Trabajador"
        android:textColor="@color/primaryText"
        android:visibility="gone"
        android:textSize="@dimen/textsize_tittle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avi_textView3" />
</LinearLayout>
